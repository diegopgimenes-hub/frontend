# .editorconfig — garante consistência de estilo entre editores
root = true

# Regras padrão
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Arquivos Markdown — permitem quebras de linha
[*.md]
trim_trailing_whitespace = false

# Arquivos JSON e YAML — seguem padrão de 2 espaços
[*.{json,yaml,yml}]
indent_size = 2

# Arquivos TypeScript e JavaScript
[*.{ts,tsx,js,jsx}]
quote_type = double
max_line_length = 100
