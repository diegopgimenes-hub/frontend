{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    /* üß† Compila√ß√£o moderna e compat√≠vel com Vite */
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",

    /* üß© ESSENCIAL ‚Äî corrige o erro de '@typescript-eslint/utils/ts-eslint' */
    "moduleResolution": "bundler",

    /* ‚úÖ Compatibilidade e seguran√ßa */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* ‚öôÔ∏è Organiza√ß√£o e imports absolutos */
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },

  /* üîç Define exatamente o que ser√° analisado */
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
